<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/course1"
    android:layout_width="200dp"
    android:layout_height="410dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/shadow"
    android:fontFamily="@font/montserrat"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_horizontal"
        android:text="TOEIC (Listening &amp; Reading)"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="148dp"
        android:layout_height="120dp"
        android:fontFamily="@font/montserrat"
        android:text="The Test of English for International Communication (TOEIC) is an international standardized test of English language proficiency for non-native speakers. It..."
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="148dp"
        android:layout_height="83dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtInfo">

        <ImageView
            android:id="@+id/imgCourse"
            android:layout_width="148dp"
            android:layout_height="83dp"
            android:background="@drawable/sat"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="197dp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnFullTest"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#1d267d"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/montserrat"
        android:text="Full Test"
        android:textColor="@color/white"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/btnDetail"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#91d0e5"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/montserrat"
        android:text="Details"
        android:textColor="@color/white"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFullTest" />
</androidx.constraintlayout.widget.ConstraintLayout>
