<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#2195F3" /> <!-- Button color when pressed -->
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#D6EBFD" /> <!-- Button color when not pressed -->
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" /> <!-- Button border color -->
            <ripple android:color="#C7C7C7" /> <!-- Ripple effect color -->
        </shape>
    </item>
</selector>
